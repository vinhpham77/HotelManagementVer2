@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex flex-row">
    <div class="border-end">
        <button type="button" class="btn btn-outline-success"><i class="fa-solid fa-note-medical"></i>Thêm mới</button>
        <div>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="planRoom-tab" data-bs-toggle="tab" data-bs-target="#planRoom" type="button" role="tab" aria-controls="home" aria-selected="true">Lịch theo phòng</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="planTypeRooom-tab" data-bs-toggle="tab" data-bs-target="#planTypeRooom" type="button" role="tab" aria-controls="profile" aria-selected="false">Lịch theo loại phòng</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="viewDate-tab" data-bs-toggle="tab" data-bs-target="#viewDate" type="button" role="tab" aria-controls="contact" aria-selected="false">Xem theo ngày</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="search-tab" data-bs-toggle="tab" data-bs-target="#search" type="button" role="tab" aria-controls="contact" aria-selected="false">Tìm kiếm</button>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="planRoom" role="tabpanel" aria-labelledby="planRoom-tab">
                    <div class="d-flex flex-row">

                        <div class="row form-group">
                            <label for="date"></label>
                            <div class="col-sm-5">
                                <div class="d-flex">
                                    <input type="date" class="form-control" id="datepicker" readonly>
                                    <span class="input-group" id="icon_datepicker">
                                        <span class="input-group-text bg-white">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </span>

                                </div>
                            </div>
                        </div>

                        <div class="row form-group">
                            <label for="date"></label>
                            <div class="col-sm-5">
                                <div class="d-flex">
                                    <input type="text" class="form-control" id="datepicker1" readonly>
                                    <span class="input-group" id="icon_datepicker1">
                                        <span class="input-group-text bg-white">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </span>

                                </div>
                            </div>
                        </div>
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                            <option selected></option>
                            <option value="1">Phòng đơn</option>
                            <option value="2">Phòng đôi</option>
                          
                        </select>
                    </div>

                </div>
                <div class="tab-pane fade" id="planTypeRooom" role="tabpanel" aria-labelledby="planTypeRooom-tab">haha</div>
                <div class="tab-pane fade" id="viewDate" role="tabpanel" aria-labelledby="viewDate-tab">111</div>
                <div class="tab-pane fade" id="search" role="tabpanel" aria-labelledby="search-tab">121</div>
            </div>
        </div>
    </div>
   
</div>

