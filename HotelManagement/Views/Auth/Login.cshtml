@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    @if (TempData["Error"] is not null)
    {
        var error = TempData["Error"]?.ToString();
        <script>
            const error = "@error";
            showAlert(error,  "danger");
        </script>
    }
}